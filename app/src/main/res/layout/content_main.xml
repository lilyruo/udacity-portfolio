<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ruoruozh.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="My Nanodregree Apps!"
        android:textSize="25dp"
        android:typeface="sans" />

    <Button
        android:id="@+id/spotifyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myOwnApp"
        android:layout_alignStart="@+id/myOwnApp"
        android:layout_below="@+id/appTitle"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:padding="20dp"
        android:text="Spotify Streamer"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/scoresApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myOwnApp"
        android:layout_alignStart="@+id/myOwnApp"
        android:layout_below="@+id/spotifyButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:padding="20dp"
        android:text="Scores App"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/libraryApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myOwnApp"
        android:layout_alignStart="@+id/myOwnApp"
        android:layout_below="@+id/scoresApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:padding="20dp"
        android:text="Library App"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/buildItBigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myOwnApp"
        android:layout_alignStart="@+id/myOwnApp"
        android:layout_below="@+id/libraryApp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:padding="20dp"
        android:text="Build It Bigger"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/xyzReader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/myOwnApp"
        android:layout_alignStart="@+id/myOwnApp"
        android:layout_below="@+id/buildItBigger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#F08C35"
        android:padding="20dp"
        android:text="XYZ Reader"
        android:textColor="#000000"
        android:textSize="16dp" />

    <Button
        android:id="@+id/myOwnApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xyzReader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#d20c37"
        android:padding="20dp"
        android:text="Capstone: My Own App"
        android:textSize="16dp" />
</RelativeLayout>
